@model BixWeb.Models.Evento

@{
    ViewData["Title"] = "Buscar Dicas de Presente";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Pages/Eventos/BuscarPresentes.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}

<div class="presente-container">
    <!-- Cabeçalho da Página -->
    <div class="form-page-header">
        <a asp-action="Index" asp-controller="Convites" class="form-back-link">
            <i class="bi bi-arrow-left-circle fs-2"></i>
        </a>
        <h1 class="form-page-title">Encontre o Presente Ideal</h1>
    </div>

    <!-- Formulário Principal -->
    <div class="form-main-card">
        <form asp-action="PresentesB" method="post">
            <input type="hidden" name="codConvite" value="@ViewBag.codConvite" />

            <div class="form-card">
                <h2 class="form-section-title">Gerador de Sugestões com IA</h2>
                <p class="form-section-subtitle">Forneça alguns detalhes para receber dicas de presentes personalizadas.</p>

                <div class="row g-3">
                    <!-- Opções de Descrição -->
                    <div class="col-12">
                        <label class="form-label">Fontes de Informação</label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="descricaoEven" value="true" id="descricaoEvenCheck">
                            <label class="form-check-label" for="descricaoEvenCheck">
                                Usar descrição do evento
                            </label>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" name="convitedesc" value="true" id="convitedescCheck">
                            <label class="form-check-label" for="convitedescCheck">
                                Usar descrição do convite
                            </label>
                        </div>
                    </div>

                    <!-- Detalhes Pessoais -->
                    <div class="col-md-6">
                        <label class="form-label required">Data de Nascimento</label>
                        <input name="nascimento" type="date" class="form-control" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required">Gênero</label>
                        <select name="genero" class="form-select">
                            <option value="Feminino">Feminino</option>
                            <option value="Masculino">Masculino</option>
                            <option value="Outro">Outro</option>
                        </select>
                    </div>

                    <!-- Faixa de Preço -->
                    <div class="col-md-6">
                        <label class="form-label required">Preço Mínimo (R$)</label>
                        <input name="precoMin" type="text" id="valor" class="form-control" placeholder="R$ 0,00" required />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label required">Preço Máximo (R$)</label>
                        <input name="precoMax" type="text" id="valorMax" class="form-control" placeholder="R$ 1.000,00" required />
                    </div>
                    
                    <!-- Campo de Descrição Adicional -->
                    <div class="col-12">
                        <label class="form-label">Descreva a pessoa (opcional)</label>
                        <textarea name="descricao" class="form-control" rows="4" placeholder="Ex: Gosta de música, hobbies, estilo, o que te lembra essa pessoa..."></textarea>
                        <div class="form-text">
                            Quanto mais detalhes, mais precisas serão as sugestões da IA.
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botão de Ação -->
            <div class="form-action-buttons">
                <button type="submit" class="btn btn-primary-action" onclick="showLoading()">
                    <i class="bi bi-lightbulb me-2"></i>
                    Buscar Sugestões
                </button>
            </div>
        </form>
    </div>
</div>


<!-- Overlay de Loading -->
<div id="loadingOverlay" class="loading-overlay">
    <div class="spinner-border text-light" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <p class="loading-text">Gerando presentes...</p>
</div>

@section Scripts {
    <script>
        // Mostra o loading
        function showLoading() {
            // Verifica se o formulário é válido antes de mostrar o loading
            const form = document.querySelector('form');
            if (form.checkValidity()) {
                document.getElementById('loadingOverlay').style.display = 'flex';
            }
        }

        function formatReal(int) {
            var tmp = int.toString().replace(/([0-9]{2})$/g, ",$1");
            if (tmp.length > 6)
                tmp = tmp.replace(/([0-9]{3}),([0-9]{2}$)/g, ".$1,$2");
            return "R$ " + tmp;
        }

        document.getElementById('valor').addEventListener('input', function (e) {
            var value = e.target.value.replace(/\D/g, '');
            e.target.value = formatReal(value);
        });

        document.getElementById('valorMax').addEventListener('input', function (e) {
            var value = e.target.value.replace(/\D/g, '');
            e.target.value = formatReal(value);
        });
    </script>
}

