@model IEnumerable<BixWeb.Models.Evento>

@foreach (var item in Model)
{
    <li>
        <a class="d-flex flex-column flex-lg-row gap-3 align-items-start align-items-lg-center py-3 link-body-emphasis text-decoration-none border-top" style="color:black" href="@item.linkEvento">
            <img class="bd-placeholder-img" src="@item.bannerEvento" width="100" height="96" onerror="this.onerror=null; this.src='/imagens/semImagem.jpg';">
            <div class="col-lg-8">
                <h6 class="mb-0">@item.nomeEvento</h6>
                <small class="text-body-secondary">@item.dataInicioEvento.ToString("dddd, dd MMMM yyyy HH:mm") </small>
            </div>
        </a>
    </li>
}