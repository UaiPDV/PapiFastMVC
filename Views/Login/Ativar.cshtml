@model BixWeb.ViewModel.Ativar
@{
    ViewData["Title"] = "Ativar Conta";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Pages/Login/ativar.css" asp-append-version="true" />
    <!-- Adicionando Font Awesome para os ícones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
}

<div class="ativar-container">
    <div class="ativar-card">
        <img class="logo" src="/imagens/novaLogo1.png" alt="Papi Fast Logo">

        @if (ViewBag.sucesso != null)
        {
            <h1 class="text-success">Conta ativada com sucesso!</h1>
            <p class="subtitle">
                @ViewBag.sucesso
            </p>
            <a asp-controller="Login" asp-action="Index" class="btn btn-ativar">Acessar Conta</a>
        }
        else
        {
            <h1>Ative sua conta</h1>
            <p class="subtitle">
                Crie uma nova senha para começar a usar a plataforma.
            </p>

            <form asp-action="Ativar" class="ativar-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="codFilial" type="hidden" value="@ViewBag.codFilial" />
                <input asp-for="codUsuario" type="hidden" value="@ViewBag.codUsuario" />

                <div class="form-group">
                    <label asp-for="senha">Nova Senha</label>
                    <div class="input-group">
                        <i class="fa-solid fa-lock"></i>
                        <input asp-for="senha" class="form-control" placeholder="••••••" type="password">
                    </div>
                    <span asp-validation-for="senha" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="confirmarSenha">Confirmar Senha</label>
                    <div class="input-group">
                        <i class="fa-solid fa-lock"></i>
                        <input asp-for="confirmarSenha" class="form-control" placeholder="••••••" type="password">
                    </div>
                    <span asp-validation-for="confirmarSenha" class="text-danger"></span>
                </div>

                @if (!string.IsNullOrEmpty(ViewBag.LogoOff))
                {
                    <div class="text-danger text-center mb-3">
                        <h5>@ViewBag.LogoOff</h5>
                    </div>
                }

                <button type="submit" class="btn btn-ativar">Salvar e Ativar</button>
            </form>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
