@model BixWeb.ViewModel.Login
@{
    ViewBag.Title = "Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Pages/Login/index.css" asp-append-version="true" />
    <!-- Adicionando Font Awesome para os ícones -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
}

<div class="login-container">
    <div class="login-card">
        <img class="logo" src="/imagens/novaLogo1.png" alt="Papi Fast Logo">
        
        <h1>Acesse sua conta</h1>
        <p class="subtitle">
            Novo aqui? <a asp-action="Create">Crie sua Conta</a>
        </p>

        <form asp-action="Index" class="login-form">
            <input type="hidden" value="@ViewBag.ReturnUrl" name="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <div class="input-group">
                    <i class="fa-regular fa-envelope"></i>
                    <input asp-for="Email" class="form-control" placeholder="seu@email.com">
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <div class="input-group">
                    <i class="fa-solid fa-lock"></i>
                    <input asp-for="Senha" class="form-control" placeholder="••••••" type="password">
                </div>
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            
            @if (!string.IsNullOrEmpty(ViewBag.LogoOff))
            {
                <div class="text-danger text-center mb-3">
                    <h5>@ViewBag.LogoOff</h5>
                </div>
            }

            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                <label class="form-check-label" for="rememberMe">
                    Lembrar de mim
                </label>
            </div>

            <button type="submit" class="btn btn-login">Acessar</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

