@model BixWeb.Models.LoginAPI

@{
    ViewData["Title"] = "Sincronizar";
}

@section Styles {
    <link rel="stylesheet" href="~/css/Pages/Sincronizar/Sicronizar.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
}

<main class="content-area">
    <!-- Cabeçalho da Página -->
    <div class="page-header">
        <h1 class="page-title">Carregar e Sincronizar Dados UAIPDV</h1>
    </div>

    <form asp-action="Sincronizar" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="sync-card">
            <h2 class="form-section-title">Sincronização de Dados</h2>
            <p class="form-section-subtitle">
                Traga seus dados (Filiais, produtos, categorias, preços) gerenciados e disponíveis no UAIPDV para a plataforma web.
            </p>

            <div class="sync-icon-wrapper">
                <img src="/imagens/nuvem.png" class="cloud-img" alt="Nuvem">
                <img src="/imagens/setaRota.png" id="loadingArrow" class="arrow-img" alt="Seta de Sincronização">
            </div>

            <div class="status-messages">
                @if (ViewData["SincroCategoria"] != null) { <p class="status-message">@ViewData["SincroCategoria"]</p> }
                @if (ViewData["SincroProduto"] != null) { <p class="status-message">@ViewData["SincroProduto"]</p> }
                @if (ViewData["SincroFilial"] != null) { <p class="status-message">@ViewData["SincroFilial"]</p> }
                @if (ViewData["SincroPreco"] != null) { <p class="status-message">@ViewData["SincroPreco"]</p> }
                @if (ViewData["SincroModificadores"] != null) { <p class="status-message">@ViewData["SincroModificadores"]</p> }
                @if (ViewData["Erro"] != null) { <p class="status-message text-danger">@ViewData["Erro"]</p> }
            </div>

            <div class="action-buttons">
                <button type="submit" value="2" name="atualizar" onclick="startRotation()" class="btn btn-light" title="Sincroniza somente os preços e produtos">
                    <i class="bi bi-arrow-clockwise me-2"></i>
                    Sincronia Parcial
                </button>
                <button type="submit" value="1" name="atualizar" onclick="startRotation()" class="btn btn-primary">
                    <i class="bi bi-arrow-repeat me-2"></i>
                    Sincronizar Tudo
                </button>
            </div>
        </div>
    </form>
</main>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Força atualização responsiva específica para esta página
            if (window.forceResponsiveUpdate) {
                window.forceResponsiveUpdate();
            }
        });

        function startRotation() {
            const arrow = document.getElementById('loadingArrow');
            if(arrow) {
                arrow.classList.add('rotate');
            }
        }
    </script>
}
