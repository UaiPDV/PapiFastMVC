@{
    ViewData["Title"] = "Ingresso Status";
}

<section class="py-3 py-md-5 min-vh-100 d-flex justify-content-center align-items-center">
    <div class="container">
        <div class="row">
            @if (ViewBag.MSG0 == "1")
            {
                <div class="mb-xl-10">
                    <!--begin::Engage widget 1-->
                    <div class="card h-md-100" dir="ltr">
                        <!--begin::Body-->
                        <div class="card-body d-flex flex-column flex-center">
                            <!--begin::Heading-->
                            <div class="mb-2">
                                <!--begin::Title-->
                                <h1 class="fw-semibold text-gray-800 text-center lh-lg">
                                    @ViewBag.MSG <br>
                                    <span class="fw-bolder"> @ViewBag.MSG1</span>
                                </h1>
                                <!--end::Title-->
                                <!--begin::Illustration-->
                                <div class="py-10 text-center">
                                    <img src="~/assets/media/illustrations/sketchy-1/3.png" class="theme-light-show w-400px" alt="">

                                </div>
                                <!--end::Illustration-->
                            </div>
                            <!--end::Heading-->
                        </div>
                        <!--end::Body-->
                    </div>
                    <!--end::Engage widget 1-->
                </div>

            }
            else if (ViewBag.MSG0 == "2")
            {

                <div class="mb-xl-10">
                    <!--begin::Engage widget 1-->
                    <div class="card h-md-100" dir="ltr">
                        <!--begin::Body-->
                        <div class="card-body d-flex flex-column flex-center">
                            <!--begin::Heading-->
                            <div class="mb-2">
                                <!--begin::Title-->
                                <h1 class="fw-semibold text-gray-800 text-center lh-lg">
                                    @ViewBag.MSG <br>
                                    <span class="fw-bolder"> @ViewBag.MSG1</span>
                                </h1>
                                <!--end::Title-->
                                <!--begin::Illustration-->
                                <div class="py-10 text-center">
                                    <img src="~/assets/media/svg/illustrations/easy/3.svg" class="theme-light-show w-200px" alt="">
                                    <img src="~/assets/media/svg/illustrations/easy/3-dark.svg" class="theme-dark-show w-200px" alt="">
                                </div>
                                <!--end::Illustration-->
                            </div>
                            <!--end::Heading-->
                        </div>
                        <!--end::Body-->
                    </div>
                    <!--end::Engage widget 1-->
                </div>
            }
            else
            {
                <div class="d-flex flex-column flex-root" id="kt_app_root">
                    <!--begin::Authentication - 404 Page-->
                    <div class="d-flex flex-column flex-center flex-column-fluid p-10">
                        <!--begin::Illustration-->
                        <img src="~/assets/media/illustrations/sketchy-1/18.png" alt="" class="mw-100 mb-10 h-lg-450px">
                        <!--end::Illustration-->
                        <!--begin::Message-->
                        <h1 class="fw-semibold mb-10" style="color: #A3A3C7">@ViewBag.MSG</h1>
                        <!--end::Message-->
                    </div>
                    <!--end::Authentication - 404 Page-->
                </div>
            }
        </div>
    </div>
</section>