@model BixWeb.Models.ReciboIngresso
@{
	ViewData["Title"] = "Cadastrar Ingressos";
}
@if (Model.ingressos != null)
{
	<h1 class="py-img text-center">Cadastro para uso do Ingresso:</h1>
	<div class="card bg-body flex-row-fluid mb-9 mb-xl-0 me-xl-9">
		<!--begin::Form-->
		<form asp-action="CadastrarIngresso" class="card-body pt-5" method="post">
			<!--begin::Title-->
			<div class="d-flex flex-column mb-9 fv-row">
				<h1 class="fw-bold text-gray-900 mb-7">Cadastrar Ingresso</h1>
				<div class="fs-4 fw-semibold text-gray-600 d-block">
					Cadastre os dados de quem irá usar o ingresso.
				</div>
			</div>
			<!--end::Title-->
			@{
				int count = 0;
			}
			@foreach (var item in Model.ingressos)
			{
				@if (string.IsNullOrEmpty(item.EmailIngresso) && string.IsNullOrEmpty(item.NomeIngresso))
				{
					<!--begin::Input group-->
					<div class="row mb-5">
						<!--begin::Col-->
						<div class="col-md-6 fv-row fv-plugins-icon-container">
							<!--begin::Label-->
							<label class="fs-5 fw-semibold mb-2">Nome Completo:</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="text" class="form-control form-control-solid" name="name[@count]">
							<!--end::Input-->
							<div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
						</div>
						<!--end::Col-->
						<!--begin::Col-->
						<div class="col-md-6 fv-row fv-plugins-icon-container">
							<!--end::Label-->
							<label class="fs-5 fw-semibold mb-2">Email</label>
							<!--end::Label-->
							<!--end::Input-->
							<input type="text" class="form-control form-control-solid" name="email[@count]">
							<!--end::Input-->
							<div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
						</div>
						<!--end::Col-->
					</div>
					<!--end::Input group-->
				}
				else
				{
					<!--begin::Input group-->
					<div class="row mb-5">
						<!--begin::Col-->
						<div class="col-md-6 fv-row fv-plugins-icon-container">
							<!--begin::Label-->
							<label class="fs-5 fw-semibold mb-2">Nome Completo:</label>
							<!--end::Label-->
							<!--begin::Input-->
							<input type="text" class="form-control form-control-solid" value="@item.NomeIngresso" disabled name="nome[@count]">
							<!--end::Input-->
							<div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
						</div>
						<!--end::Col-->
						<!--begin::Col-->
						<div class="col-md-6 fv-row fv-plugins-icon-container">
							<!--end::Label-->
							<label class="fs-5 fw-semibold mb-2">Email</label>
							<!--end::Label-->
							<!--end::Input-->
							<input type="text" class="form-control form-control-solid" value="@item.EmailIngresso" disabled name="email[@count]">
							<!--end::Input-->
							<div class="fv-plugins-message-container fv-plugins-message-container--enabled invalid-feedback"></div>
						</div>
						<!--end::Col-->
					</div>
					<!--end::Input group-->
				}
			}
			<div class="d-flex justify-content-end pt-5">
				<!--begin::Button-->
				<a href="@ViewBag.url" class="btn btn-light me-5">Cancelar</a>
				<!--end::Button-->
				<!--begin::Button-->
				<button onclick="carregar()" type="submit" class="btn btn-primary">
					<span class="indicator-label">Continuar Compra</span>
					<span class="indicator-progress">
						Carregando...
						<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
					</span>
				</button>
				<!--end::Button-->
			</div>
		</form>
		<!--end::Form-->
	</div>
}
else
{
	<h1 class="py-img text-center">Não foram encontradas Ingressos</h1>
}