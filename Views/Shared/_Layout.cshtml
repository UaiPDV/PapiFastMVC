@using Microsoft.EntityFrameworkCore
@using BixWeb.Models
@using System.Security.Claims

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no, user-scalable=no">
    <meta name="format-detection" content="telephone=no">
    <title>@ViewData["Title"] - PapiFast</title>
    <link rel="icon" href="~/imagens/novaLogo1.png">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Google Fonts: Inter and Pacifico -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Pacifico&display=swap" rel="stylesheet">

    <!-- Seus arquivos CSS principais -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/GlobalStyles.css" asp-append-version="true" />

    <!-- CSS Específico da Página -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>

    <!-- jQuery (deve vir antes dos scripts que dependem dele) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- Mini Sidebar (Visível apenas em telas maiores que 'md') -->
    <div class="d-none d-md-flex flex-column flex-shrink-0 p-3 position-fixed top-0 start-0 mini-sidebar shadow-lg">
        <button class="btn sidebar-toggler d-flex align-items-center justify-content-center" type="button" data-bs-toggle="offcanvas" data-bs-target="#main-sidebar" aria-controls="main-sidebar">
            <i class="bi bi-list fs-4 text-dark"></i>
        </button>
    </div>

    <!-- Main Sidebar (Offcanvas) -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="main-sidebar" aria-labelledby="main-sidebarLabel">
        <div class="offcanvas-header border-bottom border-dark border-opacity-25">
            <div class="d-flex align-items-center">
                <img src="~/imagens/novaLogo1.png" alt="Logótipo Papi Fast" class="rounded-circle me-2 logo-sidebar" onerror="this.onerror=null;this.src='https://placehold.co/40x40/f8bc1f/FFFFFF?text=P';">
                <h5 class="offcanvas-title font-pacifico fs-4 text-dark" id="main-sidebarLabel">PapiFast</h5>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body d-flex flex-column p-0 sidebar-scroll">
            <ul class="nav nav-pills flex-column mb-auto p-2">
                <li class="nav-item">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link d-flex align-items-center my-1">
                        <i class="bi bi-house-door-fill me-3 fs-5"></i> Home
                    </a>
                </li>
                <!-- Itens de menu baseados na role -->
                <partial name="_LoginPartial2" />
                
                <li>
                    <a asp-area="" asp-controller="Home" asp-action="Suporte" class="nav-link d-flex align-items-center my-1">
                       <i class="bi bi-headset me-3 fs-5"></i> Suporte
                    </a>
                </li>
            </ul>
            <!-- Rodapé da Sidebar (Info do Usuário / Botão de Login) -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                var Imagem = User.FindFirst(System.Security.Claims.ClaimTypes.Thumbprint)?.Value;
                <div class="p-2 mt-auto border-top border-dark border-opacity-25">
                    <div class="dropdown">
                        <a href="#" class="d-flex align-items-center text-dark text-decoration-none p-2 dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                            <img class="rounded-circle me-2" src="@Imagem" alt="Avatar do usuário" width="32" height="32" onerror="this.onerror=null; this.src='/imagens/Usuario.png';">
                            <strong>@User.Identity.Name</strong>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" asp-controller="Login" asp-action="Logout">Sair</a></li>
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <div class="p-3 mt-auto border-top border-dark border-opacity-25">
                     <a class="btn btn-dark w-100" asp-area="" asp-controller="Login" asp-action="Index">Login</a>
                </div>
            }
        </div>
    </div>

    <!-- Conteúdo Principal -->
    <div class="main-content">
        <!-- Cabeçalho -->
        <header class="bg-white shadow-sm d-flex align-items-center justify-content-between p-3">
             <div class="d-flex align-items-center">
                <img src="~/imagens/novaLogo1.png" alt="Logótipo Papi Fast" class="rounded-circle me-2 logo-header" onerror="this.onerror=null;this.src='https://placehold.co/40x40/f98303/FFFFFF?text=P';">
                <span class="font-pacifico fs-4 text-dark">PapiFast</span>
            </div>
            
            <!-- Perfil de Login/Usuário (visível em telas médias ou maiores) -->
            <div class="d-none d-md-flex">
                <partial name="_LoginPartial" />
            </div>

            <!-- Botão Toggler para Mobile (visível apenas em telas pequenas) -->
            <button class="btn sidebar-toggler d-md-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#main-sidebar" aria-controls="main-sidebar">
                <i class="bi bi-list fs-4 text-dark"></i>
            </button>
        </header>

        <!-- Área de Conteúdo -->
        <main class="p-4">
            <div>
                @RenderBody()
            </div>
        </main>

        <!-- Rodapé -->
        <footer class="footer">
            <span class="text-muted">&copy; 2025 - By PapiFast - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></span>
        </footer>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Scripts do site -->
    <!-- MODIFICADO: Apenas o responsive-manager.js é necessário -->
    <script src="~/js/responsive-manager.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <script>
        // Script para marcar o link ativo na sidebar
        document.addEventListener("DOMContentLoaded", function () {
            const currentPage = window.location.pathname.toLowerCase();
            const sidebarLinks = document.querySelectorAll('#main-sidebar .nav-link');
            let bestMatch = null;
            let bestMatchLength = 0;

            sidebarLinks.forEach(link => {
                if (link.getAttribute('data-bs-toggle') === 'collapse') {
                    return;
                }

                const linkHref = link.getAttribute('href');
                if (linkHref) {
                    const linkPath = new URL(link.href).pathname.toLowerCase();
                    
                    if (currentPage.startsWith(linkPath) && linkPath.length > bestMatchLength) {
                        if (linkPath === '/' && currentPage !== '/') {
                            return;
                        }
                        bestMatch = link;
                        bestMatchLength = linkPath.length;
                    }
                }
            });

            if (bestMatch) {
                bestMatch.classList.add('active');

                const parentCollapse = bestMatch.closest('.collapse');
                if (parentCollapse) {
                    new bootstrap.Collapse(parentCollapse, { toggle: false }).show();
                    
                    const triggerLink = document.querySelector(`a[href="#${parentCollapse.id}"]`);
                    if (triggerLink) {
                        triggerLink.classList.add('active');
                    }
                }
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
